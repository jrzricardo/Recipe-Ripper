<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="mb-4">Welcome to Recipe Ripper</h1>

    <% if user_signed_in? %>
      <p>Hello, <%= current_user.email %>!</p>
    <% end %>

      <%= form_tag(rip_recipe_path, method: :get, class: 'mb-4') do %>
        <div class="mb-3">
          <%= label_tag(:url, "Enter Recipe URL:", class: 'form-label') %>
          <%= text_field_tag(:url, nil, class: 'form-control') %>
        </div>
        <%= submit_tag("Rip Recipe", class: 'btn btn-primary') %>
      <% end %>

      <%= link_to 'View Recipes', recipes_path, class: 'btn btn-secondary me-2' %>
      <%= link_to 'View Your Recipe Book', recipe_books_path, class: 'btn btn-secondary' %>
  </div>
</div>
