<div class="container-fluid p-0">
  <div class="landing-background">
    <div class="jumbotron jumbotron-fluid text-center">
      <div class="container">
        <h1 class="display-4 text-white">Welcome to Recipe Ripper!</h1>
        <p class="lead text-white">Easily extract and save recipes from any website.</p>
        <hr class="my-4">
        <div class="mt-5">
          <%= link_to 'Start Ripping Recipes', home_path, class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    </div>

    <div class="container">
      <div id="features" class="row mt-5">
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <i class="fas fa-magic fa-3x mb-3 text-primary"></i>
              <h3 class="card-title">Extract Recipes</h3>
              <p class="card-text">Just paste a URL and let Recipe Ripper do the rest.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <i class="fas fa-heart fa-3x mb-3 text-danger"></i>
              <h3 class="card-title">Save Favorites</h3>
              <p class="card-text">Build your personal recipe collection.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <i class="fas fa-mobile-alt fa-3x mb-3 text-success"></i>
              <h3 class="card-title">Easy Access</h3>
              <p class="card-text">Access your recipes from anywhere, anytime.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
