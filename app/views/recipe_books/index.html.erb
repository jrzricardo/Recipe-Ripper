<div class="container mt-4">
  <h1 class="mb-4">Your Recipe Book</h1>
  <% if @recipes.any? %>
    <div class="list-group">
      <% @recipes.each do |recipe| %>
        <div class="list-group-item list-group-item-action">
          <%= link_to recipe_path(recipe), class: "text-decoration-none" do %>
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><%= recipe.name %></h5>
            </div>
            <p class="mb-1">Source: <%= recipe.url %></p>
          <% end %>
          <%= button_to 'Delete Recipe', delete_recipe_book_path(recipe), method: :delete, class: 'btn btn-sm btn-danger mt-2 float-end', data: { confirm: 'Are you sure you want to delete this recipe from your recipe book?' } %>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mt-4">
    <%= paginate @recipes, class: 'pagination' %>
  </div>

  <% else %>
    <p>You haven't saved any recipes to your book yet.</p>
  <% end %>
  <%= link_to 'Back to Recipes', recipes_path, class: 'btn btn-secondary mt-3' %>
</div>
