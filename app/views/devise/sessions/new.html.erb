<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center">Sign in</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { class: 'form-control', autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { class: 'form-control', autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              <%= hidden_field_tag :recipe_id, params[:recipe_id] %>
            </div>

            <div class="form-actions text-center">
              <%= f.button :submit, "Sign in", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>S
