<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-4 text-center">
      <h1 class="display-6"><%= @recipe['name'] || @recipe.name %></h1>
    </div>
    <div class="col-md-4 text-center">
      <p class="lead">Serving Size: <%= @recipe['serving_size'] || @recipe.serving_size %></p>
    </div>
    <div class="col-md-4 text-center">
      <p class="lead">Author: <%= @recipe['author'] || @recipe.author %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Ingredients</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <% (@recipe['ingredients'] || @recipe.ingredients_array).each do |ingredient| %>
              <li class="list-group-item"><%= ingredient %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Instructions</h5>
        </div>
        <div class="card-body">
          <ol class="list-group list-group-numbered">
            <% (@recipe['instructions'] || @recipe.instructions_array).each do |instruction| %>
              <li class="list-group-item"><%= instruction %></li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col">
      <%= link_to 'Back to Recipes', recipes_path, class: 'btn btn-secondary me-2' %>
      <% if user_signed_in? %>
        <%= button_to 'Save to Recipe Book', save_recipe_path(@recipe['id'] || @recipe.id), method: :post, class: 'btn btn-primary' %>
      <% else %>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#signupModal">
          Save to Recipe Book
        </button>
      <% end %>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signupModalLabel">Authentication Required</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        To save recipes to your recipe book, you need to sign in or create an account.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= link_to 'Sign In', new_user_session_path(recipe_id: @recipe.id), class: 'btn btn-primary' %>
        <%= link_to 'Sign Up', new_user_registration_path(recipe_id: @recipe.id), class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
