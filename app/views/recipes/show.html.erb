<h1><%= @recipe.persisted? ? "Saved Recipe" : "Extracted Recipe" %></h1>

<h2><%= @recipe.name %></h2>
<p>Author: <%= @recipe.author %></p>

<h3>Ingredients:</h3>
<ul>
  <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
</ul>

<h3>Instructions:</h3>
<ol>
  <% @recipe.instructions.each do |instruction| %>
    <li><%= instruction %></li>
  <% end %>
</ol>

<% unless @recipe.persisted? %>
  <%= button_to "Save This Recipe", save_recipe_path(@recipe), method: :post %>
<% end %>

<%= link_to 'Back', recipes_path %>
